<p id="notice"><%= notice %></p>

<h1><%= @mining_types.model_name.human(count: 2) %></h1>

<%= render "shared/menu" %>

<table>
  <thead>
    <tr>
      <th><%= MiningType.human_attribute_name(:description) %></th>
      <th><%= MiningType.human_attribute_name(:acronym) %></th>
      <th colspan="3"><%= t("text.actions") %></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('links.delete'), mining_type, method: :delete, data: { confirm: t('text.confirmation') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to @mining_types.model_name.human, new_mining_type_path %>
