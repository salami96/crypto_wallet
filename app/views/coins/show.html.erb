<h1><%= @coin.description %></h1>

<p id="notice"><%= notice %></p>

<%= render "shared/menu" %>

<p>
  <strong><%= Coin.human_attribute_name(:description) %>:</strong>
  <%= @coin.description %>
</p>

<p>
  <strong><%= Coin.human_attribute_name(:acronym) %>:</strong>
  <%= @coin.acronym %>
</p>

<p>
  <strong><%= Coin.human_attribute_name(:image) %>:</strong>
  <%= image_tag @coin.url_image, width: 50, height: 50 %>
</p>

<p>
  <strong><%= Coin.human_attribute_name(:mining_type) %>:</strong>
  <%= @coin.mining_type&.acronym || t("text.none_selected") %>
</p>

<%= link_to t('links.edit'), edit_coin_path(@coin) %> |
<%= link_to t('links.back'), coins_path %>
